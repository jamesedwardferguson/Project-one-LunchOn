<h3> <%= @user.name  %>'s Profile</h3>

<ul>
  <li><%= @user.email %></li>
  <li><%= @user.image %></li>
  <li><%= @user.admin %></li>
  <!-- <li><%#= @user.password_digest %></li> -->
</ul>

<!-- Only show these buttons if the @user var contains the same user as @current_user -->
<% if @user == @current_user %>
<div class="controls">
  <%= link_to "Edit user", edit_user_path(@user) %> |
  <%= link_to "Delete account", user_path(@user), :method => :delete, :data => { :confirm => "Are you sure?"} %>
</div>
<% end %>

<h5> User Lunches </h5>
<% @user.lunch_items.each do |lunch| %>
<h6>
  <%= link_to(lunch.name, lunchitem_path(lunch) ) %>
</h6>
<% end %>
